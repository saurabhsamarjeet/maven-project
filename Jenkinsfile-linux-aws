pipeline {
    agent any
	environment {
        IMAGE = "vishnuhdadhich/hello-world"
        REGISTRY = "https://registry.hub.docker.com"
    }
    stages {
        stage('Build') {
            steps {
                sh 'docker run -it --rm -v "$PWD":/app -w /app maven mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'docker run -it --rm -v "$PWD":/app -w /app maven mvn test'
            }
            post {
                always {
                    junit 'server/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Docker build') {
            steps {
                sh 'docker build -f Dockerfile -t hello-world:1 .'
            }
        }
		stage('Deliver') {
            steps {
				sh 'docker run --rm -d -p 80:8080 hello-world:1'
				echo "Now you can access your web application at the following url in the browser. http://localhost:80/webapp"
            }
        }
    }
}